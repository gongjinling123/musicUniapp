<view class="playList"><view class="tab"><view data-event-opts="{{[['tap',[['handleBack',['$event']]]]]}}" class="tab-back" bindtap="__e"><text class="iconfont icon-fanhui icon-tab"></text><text class="tab-title">{{name}}</text></view><view class="bg-img"><image src="{{coverImgUrl}}" mode></image></view><view class="song-count"><view class="count-item"><text class="iconfont icon-pinglun1 item-icon"></text><text class="item-title">{{$root.f0+"万"}}</text></view><view class="count-item"><text class="iconfont icon-fenxiang item-icon"></text><text class="item-title">{{shareCount}}</text></view><view class="count-item"><text class="iconfont icon-download item-icon"></text><text class="item-title">下载</text></view></view></view><view class="playList-body"><view class="play-all-row"><view data-event-opts="{{[['tap',[['playAll',['$event']]]]]}}" class="play-all" bindtap="__e"><text class="iconfont icon-bofang1 icon-play"></text><text class="title">播放全部</text><text class="total">{{"(共"+trackCount+"首)"}}</text></view><view class="collect"><text>{{"+ 收藏（"+$root.f1+"万）"}}</text></view></view><view class="play-songs"><block wx:for="{{tracks}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="songs-item" data-id="{{item.id}}" data-event-opts="{{[['tap',[['handleSongs',['$event']]]]]}}" bindtap="__e"><view class="{{['songs-index',index<3?'hotTop1':'hotTop2']}}">{{''+(index+1)+''}}</view><view class="songs-info"><view class="songs-name">{{''+item.name+''}}</view><view class="singer">{{''+item.ar[0].name+"-"+item.name+''}}</view></view><view class="songs-play"><text class="iconfont icon-ziyuan1"></text></view></view></block></block></view></view></view>