
.hours{
	width: 100%;
	margin-top: 20rpx;
	padding-bottom: 30rpx;
	border-bottom: 10rpx solid #F4F4F4;
}
.hours-body{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.hours-item{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	/* border: 1px solid #007AFF; */
}
.item-img{
	width: 200rpx;
	height: 200rpx;
}
.item-img image{
	width: 100%;
	height: 100%;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.item-title{
	width: 200rpx;
	margin-top: 8rpx;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	font-size: 24rpx;
	color: #212121;
	text-align: center;
}
.item-num{
	width: 200rpx;
	height: 50rpx;
	margin-top: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	font-size: 24rpx;
	color: #969696;
}
.item-num text{
	margin-right: 8rpx;
}

