
.content-item{
	width: 100%;
	height: 120rpx;
	/* background-color: #007AFF; */
	margin-top: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.item-left{
	width: 70rpx;
	height: 120rpx;
	line-height: 120rpx;
	text-align: center;
	/* color: #FF3536; */
	font-weight: 600;
}
.red{
	color: red;
}
.grey{
	color: #929292;
}
.item-right{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.item-image{
	width: 120rpx;
	height: 120rpx;
}
.item-image image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.item-name{
	width: 370rpx;
	margin-left: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.item-num{
	width: 150rpx;
	height: 120rpx;
	text-align: center;
	line-height: 120rpx;
	font-size: 24rpx;
	color: #969696;
}


