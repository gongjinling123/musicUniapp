<view class="songsaleboard"><view data-event-opts="{{[['tap',[['handleBack',['$event']]]]]}}" class="tab" bindtap="__e"><text class="iconfont icon-fanhui icon-tab"></text><text class="tab-title">数字编辑</text></view><view class="select"><block wx:for="{{select}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view data-event-opts="{{[['tap',[['handleSelect',[index]]]]]}}" class="{{['select-item',currentIndex==index?'active':'']}}" bindtap="__e">{{''+item+''}}</view></block></block></view><view class="type"><block wx:for="{{type}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view data-event-opts="{{[['tap',[['handleType',[index]]]]]}}" class="type-item" bindtap="__e"><text class="{{[typeIndex==index?'active-type':'']}}">{{item}}</text></view></block></block></view><view class="songsaleboard-content"><block wx:for="{{products}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="content-item"><view class="{{['content-index',index<3?'hotIndex':'']}}">{{''+(index+1)+''}}</view><view class="content-img"><image src="{{item.coverUrl}}"></image></view><view class="content-desc"><view class="song-info"><view class="song-name">{{item.albumName}}</view><view class="singer-name">{{item.artistName}}</view><view class="saleNum">{{"已售"+item.saleNum+"张"}}</view></view><view class="supper"><text>支持</text></view></view></view></block></block></view></view>