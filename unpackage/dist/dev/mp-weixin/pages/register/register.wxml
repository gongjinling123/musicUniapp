<view class="box"><block wx:if="{{showPhone}}"><view class="phone"><form data-event-opts="{{[['submit',[['sendCode',['$event']]]]]}}" bindsubmit="__e"><input class="inp" type="text" name="phone" maxlength="11" placeholder="请输入手机号"/><button class="default" style="width:80vw;" form-type="submit">下一步</button></form></view></block><block wx:if="{{showCaptcha}}"><view class="captcha"><view data-event-opts="{{[['tap',[['toPhone',['$event']]]]]}}" class="back" bindtap="__e"><text class="iconfont icon-fanhui"></text><text>手机号验证</text></view><view class="sendcode"><text class="title">验证码已发送至</text><view class="send-phone"><text class="user-phone">{{phone}}</text><text class="time">{{time+"s"}}</text></view></view><input class="inp" type="text" name="captcha" data-event-opts="{{[['input',[['__set_model',['','captcha','$event',[]]]]]]}}" value="{{captcha}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['next1',['$event']]]]]}}" class="default" style="width:80vw;" bindtap="__e">下一步</button></view></block><block wx:if="{{showPassword}}"><view class="user-pwd"><text class="pwd-title">请设置登录密码,8-20位字符,至少包含字母/数字/符号2种组合</text><input class="inp" type="password" name="password" placeholder="密码" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['next2',['$event']]]]]}}" class="default" style="width:80vw;" bindtap="__e">下一步</button></view></block><block wx:if="{{showNickname}}"><view class="user-name"><text class="iconfont icon-hipster2 hi-icon"></text><text class="hi-title">你希望大家怎么称呼你？</text><input class="inp" type="text" name="nickname" placeholder="昵称" data-event-opts="{{[['input',[['__set_model',['','nickname','$event',[]]]]]]}}" value="{{nickname}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['next3',['$event']]]]]}}" class="default" style="width:80vw;" bindtap="__e">开启云音乐</button></view></block></view>